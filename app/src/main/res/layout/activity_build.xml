<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".BuildActivity">

	<android.support.v7.widget.Toolbar
		android:id="@+id/Toolbar2"
		android:layout_width="match_parent"
		app:titleTextColor="#ffffff"
		android:layout_height="?attr/actionBarSize"
		android:background="?attr/colorPrimary"/>

	<android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/build_card_view"
		android:layout_width="match_parent"
		android:layout_height="213dp"
		android:layout_margin="10dp"
		app:cardCornerRadius="8dp"
		app:cardElevation="10dp">

		<android.support.constraint.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal" app:layout_constraintTop_toTopOf="@+id/champion_item_6"
			app:layout_constraintBottom_toTopOf="@+id/champion_item_6">

			<ImageView
				android:id="@+id/champion_splash_art"
				android:layout_width="95dp"
				android:layout_height="95dp"
				android:scaleType="centerCrop"
				android:layout_marginTop="56dp"
				app:layout_constraintEnd_toStartOf="@+id/champion_item_1"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="26dp"
				android:layout_marginStart="26dp" android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
				android:contentDescription="@string/image_item"/>

			<ImageView
				android:id="@+id/champion_item_1"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:scaleType="centerCrop"
				android:layout_marginTop="42dp"
				app:layout_constraintStart_toEndOf="@+id/champion_splash_art"
				app:layout_constraintEnd_toStartOf="@+id/champion_item_2" android:layout_marginBottom="32dp"
				app:layout_constraintBottom_toTopOf="@+id/champion_item_4" app:layout_constraintTop_toTopOf="parent"
				android:layout_marginEnd="26dp" android:layout_marginRight="26dp"
				android:contentDescription="@string/image_item" android:layout_marginLeft="8dp"
				android:layout_marginStart="8dp"/>
			<ImageView
				android:id="@+id/champion_item_2"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:scaleType="centerCrop"
				android:layout_marginTop="42dp"
				app:layout_constraintStart_toEndOf="@+id/champion_item_1"
				app:layout_constraintEnd_toStartOf="@+id/champion_item_3" android:layout_marginBottom="32dp"
				app:layout_constraintBottom_toTopOf="@+id/champion_item_5" app:layout_constraintTop_toTopOf="parent"
				android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
				android:contentDescription="@string/image_item"/>
			<ImageView
				android:id="@+id/champion_item_3"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:scaleType="centerCrop"
				android:layout_marginTop="42dp"
				app:layout_constraintStart_toEndOf="@+id/champion_item_2" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/champion_item_6"
				app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
				android:layout_marginRight="16dp" android:contentDescription="@string/image_item"/>
			<ImageView
				android:id="@+id/champion_item_4"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:scaleType="centerCrop"
				app:layout_constraintTop_toBottomOf="@+id/champion_item_1"
				app:layout_constraintEnd_toStartOf="@+id/champion_item_5" android:layout_marginBottom="59dp"
				android:layout_marginLeft="40dp"
				android:layout_marginStart="40dp" app:layout_constraintBottom_toBottomOf="parent"
				android:layout_marginEnd="26dp" android:layout_marginRight="26dp"
				android:contentDescription="@string/image_item"
				app:layout_constraintStart_toEndOf="@+id/champion_splash_art" android:layout_marginTop="16dp"/>
			<ImageView
				android:id="@+id/champion_item_5"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:scaleType="centerCrop"
				app:layout_constraintTop_toBottomOf="@+id/champion_item_2"
				app:layout_constraintStart_toEndOf="@+id/champion_item_4"
				app:layout_constraintEnd_toStartOf="@+id/champion_item_6" android:layout_marginBottom="59dp"
				app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
				android:layout_marginRight="20dp" android:contentDescription="@string/image_item"
				android:layout_marginTop="16dp"/>
			<ImageView
				android:id="@+id/champion_item_6"
				android:layout_width="55dp"
				android:layout_height="55dp"
				android:scaleType="centerCrop"
				app:layout_constraintTop_toBottomOf="@+id/champion_item_3"
				app:layout_constraintStart_toEndOf="@+id/champion_item_5" app:layout_constraintEnd_toEndOf="parent"
				android:layout_marginBottom="59dp" app:layout_constraintBottom_toBottomOf="parent"
				android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
				android:contentDescription="@string/image_item" android:layout_marginTop="16dp"/>


		</android.support.constraint.ConstraintLayout>

	</android.support.v7.widget.CardView>


</LinearLayout>